                <div class="x_title">
                    <h2>
                        Informations
                    </h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a
                                    href="{{ path('project_back_forumpost_edit', {'id' : object.id}) }}"
                                    class="close-link"><i class="fa fa-edit"></i>
                            </a>
                        </li>
                        <li>
                            <a title="Supprimer l'actualité"
                               onclick="return confirm('!!! Etes vous sur ?')"
                               href="{{ path('project_back_forumpost_remove', {'id' : object.id, 'token': csrf_token('forumpost_remove_'~object.id)}) }}"

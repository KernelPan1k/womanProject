                            </a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <div class="col-md-3 col-sm-3 col-xs-12 profile_left">
                        <div class="profile_img">
                            <div id="crop-avatar">
                                {% set img =
                                (object.user.img is not null)
                                ? (object.user.avatarPath()|imagine_filter('medium'))
                                : asset('bundles/projectfront/images/avatar.jpg') %}
                                <div class="fix-overlay">
                                    <img
                                            alt="" src="{{ img }}"
                                            class="img-responsive img-center">
                                </div>
                            </div>
                        </div>
                        <br>
                        <ul class="list-unstyled user_data">
                            <li>
                                <i class="fa fa-sort-numeric-asc user-profile-icon"></i> id: {{ object.id }}
                            </li>
                            <li>
                                <i class="fa fa-times"></i> Créer le : {{ object.createdAt|date('d/m/Y') }}
                            </li>
                            <li>
                                <i class="fa fa-tags"></i> Forum : {{ object.forum.name }}
                            </li>
                        </ul>
                        <a class="btn btn-success"
                           href="{{ path('project_back_forumpost_edit', {'id' : object.id }) }}">

{% extends 'ProjectBackBundle:Default:base.html.twig' %}
{% block content %}
    <div class="">
    <div class="page-title">
        <div class="title_left">
            <h3>{{ object.title }}</h3>
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">

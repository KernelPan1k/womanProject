{% extends 'ProjectBackBundle:Default:base.html.twig' %}
{% block content %}
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Editer {{ object.username }}</h3>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_content">
                        <span class="section">Informations personnelle</span>
                        {{ form_start(form, { 'attr' : { 'class' : 'form-horizontal form-label-left' }}) }}
                        {{ form_rest(form) }}
                        <div class="ln_solid"></div>
                        <div class="form-group">
                            <div class="col-md-6">
                                <input id="send" type="submit" class="btn btn-success" value="Envoyer"/>
                            </div>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
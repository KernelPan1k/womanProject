<div class="header-container">
    <div class="header-top dark ">
        <div class="container">
            <div class="row">
                <div class="col-xs-3 col-sm-6 col-md-7">
                    <div class="header-top-first clearfix">
                        <ul class="social-links circle small clearfix hidden-xs">
                            <li class="twitter">
                                <a href="http://www.twitter.com" target="_blank">
                                    <i class="fa fa-twitter"></i>
                                </a>
                            </li>
                            <li class="googleplus">
                                <a href="http://plus.google.com" target="_blank">
                                    <i class="fa fa-google-plus"></i>
                                </a>
                            </li>
                            <li class="facebook">
                                <a href="http://www.facebook.com" target="_blank">
                                    <i class="fa fa-facebook"></i>
                                </a>
                            </li>
                        </ul>
                        <div class="social-links hidden-lg hidden-md hidden-sm circle small">
                            <div class="btn-group dropdown">
                                <button data-toggle="dropdown" class="btn dropdown-toggle" type="button">
                                    <i class="fa fa-share-alt"></i>
                                </button>
                                <ul class="dropdown-menu dropdown-animation">
                                    <li class="twitter">
                                        <a href="http://www.twitter.com" target="_blank">
                                            <i class="fa fa-twitter"></i>
                                        </a>
                                    </li>
                                    <li class="googleplus">
                                        <a href="http://plus.google.com" target="_blank">
                                            <i class="fa fa-google-plus"></i>
                                        </a>
                                    </li>
                                    <li class="facebook">
                                        <a href="http://www.facebook.com" target="_blank">
                                            <i class="fa fa-facebook"></i>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xs-9 col-sm-6 col-md-5">
                    <div class="clearfix" id="header-top-second">
                        <div class="header-top-dropdown text-right">
                            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                                <div class="btn-group">
                                    <a class="btn btn-default btn-sm" href="{{ path('fos_user_profile_show') }}">
                                        {{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }}
                                    </a>
                                </div>
                                <div class="btn-group">
                                    <a class="btn btn-default btn-sm" href="{{ path('fos_user_security_logout') }}">
                                        {{ 'layout.logout'|trans({}, 'FOSUserBundle') }} <i class="fa fa-sign-out"></i>
                                    </a>
                                </div>
                                {% if app.user and is_granted('ROLE_SUPER_ADMIN') %}
                                    <div class="btn-group">
                                        <a class="btn btn-default btn-sm"
                                           href="{{ path('project_back_default_index') }}">
                                            Admin <i class="fa fa-tachometer"></i>
                                        </a>
                                    </div>
                                {% endif %}
                            {% else %}
                                <div class="btn-group">
                                    <a class="btn btn-default btn-sm"
                                       href="{{ path('fos_user_registration_register') }}">
                                        <i class="fa fa-user pr-10"></i> Inscription
                                    </a>
                                </div>
                                <div class="btn-group dropdown">
                                    <button data-toggle="dropdown"
                                            class="btn dropdown-toggle btn-default btn-sm"
                                            type="button">
                                        <i class="fa fa-lock pr-10"></i> Connexion
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-right dropdown-animation">
                                        <li>
                                            {{ render(controller('FOSUserBundle:Security:login')) }}
                                        </li>
                                    </ul>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <header class="header centered fixed    clearfix">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="header-left clearfix">
                        <div id="logo" class="logo">
                            <h2 class="text-center logo-font margin-clear">
                                <a href="{{ path('project_front_index_index') }}" class="text-muted">
                                    Entre
                                    <span class="text-default"></span>Amies</a>
                                <img style="display: inline;"
                                     src="{{ asset('bundles/projectfront/images/logofleur.png') }}" alt="">
                            </h2>
                        </div>
                        <div class="site-slogan text-center">
                            Le site entre amies
                        </div>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="header-right clearfix">
                        <div class="main-navigation  animated ">
                            <nav class="navbar navbar-default" role="navigation">
                                <div class="container-fluid">
                                    <div class="navbar-header">
                                        <button type="button" class="navbar-toggle" data-toggle="collapse"
                                                data-target="#navbar-collapse-1">
                                            <span class="sr-only">Toggle navigation</span>
                                            <span class="icon-bar"></span>
                                            <span class="icon-bar"></span>
                                            <span class="icon-bar"></span>
                                        </button>
                                    </div>
                                    <div class="collapse navbar-collapse" id="navbar-collapse-1">
                                        <ul class="nav navbar-nav navbar-right">
                                            <li class="active">
                                                <a href="{{ path('project_front_index_index') }}">
                                                    <i class="fa fa-home fa-2x"></i>
                                                </a>
                                            </li>
                                            <li class="mega-menu">
                                                <a href="{{ path('project_front_network_index') }}">Le réseaux</a>
                                            </li>
                                            <li class="dropdown ">
                                                <a href="{{ path('project_front_news_index') }}">Les actualités</a>
                                                <ul class="dropdown-menu">
                                                    <li class=" ">
                                                        <a class="dropdown-toggle" data-toggle="dropdown"
                                                           href="">Mode</a>
                                                    </li>
                                                    <li class=" ">
                                                        <a class="dropdown-toggle" data-toggle="dropdown"
                                                           href="">
                                                            Créations<span class="badge">NEW</span></a>
                                                    </li>
                                                    <li class=" ">
                                                        <a class="dropdown-toggle" data-toggle="dropdown"
                                                           href="">Amour</a>
                                                    </li>
                                                </ul>
                                            </li>
                                            <li class="">
                                                <a href="{{ path('project_front_taken_index', {'page' : 1}) }}">Sortie</a>
                                            </li>
                                            <li class="">
                                                <a href="{{ path('project_front_forum_index') }}">Discutions</a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>
</div>
{% for type, messages in app.session.flashBag.all %}
    <div class="row">
        {% for message in messages %}
            <div class="text-center col-sm-6 col-sm-push-3 alert alert-{{ type }} ">
                {{ message|trans({}, 'FOSUserBundle') }}
            </div>
        {% endfor %}
    </div>
{% endfor %}

{% trans_default_domain 'FOSUserBundle' %}

{{ form_start(form, { 'action': path('fos_user_profile_edit'), 'attr': { 'class': 'form-horizontal' } }) }}
<div class="form-group">
    <label class="col-sm-2 control-label" for="">Nom</label>
    <div class="col-sm-10">
        {{ form_widget(form.lastName, {'attr' : {'class': 'class="form-control' }}) }}
    </div>
</div>
<div class="form-group">
    <label class="col-sm-2 control-label" for="">Pr√©nom</label>
    <div class="col-sm-10">
        {{ form_widget(form.firstName, {'attr' : {'class': 'class="form-control' }}) }}
    </div>
</div>
<div class="form-group">
    <label class="col-sm-2 control-label" for="">Email</label>
    <div class="col-sm-10">
        {{ form_widget(form.email, {'attr' : {'class': 'class="form-control' }}) }}
    </div>
</div>
<div class="form-group">
    <label class="col-sm-2 control-label" for="">Date de naissance</label>
    <div class="col-sm-10">
        {{ form_widget(form.dateOfBirth, {'attr' : {'class': 'class="form-control js-datepicker' }}) }}
    </div>
</div>
<div class="form-group">
    <label class="col-sm-2 control-label" for="">Ville</label>
    <div class="col-sm-10">
        {{ form_widget(form.city, {'attr' : {'class': 'class="form-control' }}) }}
    </div>
</div>
<div class="form-group">
    <label class="col-sm-2 control-label" for="">Centre d'interets</label>
    <div class="col-sm-10">
        {{ form_widget(form.categorys, {'attr' : {'class': 'class="form-control' }}) }}
    </div>
</div>
<div class="form-group">
    <label class="col-sm-2 control-label" for="">Description</label>
    <div class="col-sm-10">
        {{ form_widget(form.description, {'attr' : {'class': 'class="form-control' }}) }}
    </div>
</div>
<div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
        <input class="btn btn-default" type="submit" value="{{ 'profile.edit.submit'|trans }}"/>
    </div>
</div>
{{ form_end(form) }}
